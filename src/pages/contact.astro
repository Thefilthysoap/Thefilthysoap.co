---
import Layout from '../layouts/Layout.astro';
title: "Contact";
---
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>The Filthysoap Photography</title>
    <meta name="description" content="A showcase of my favorite photographs." />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <style>
      body {
        background: #111;
        color: #eee;
        font-family: 'Helvetica Neue', Arial, sans-serif;
        margin: 0;
        padding: 0;
      }
      header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 2rem 4vw 1rem 4vw;
        background: transparent;
        max-width: 1200px;
        margin: 0 auto;
      }
      .logo-link {
        display: flex;
        align-items: center;
        text-decoration: none;
      }
      .site-logo {
        height: 150px; /* Adjust as needed */
        width: auto;
        display: block;
      }
      .tagline {
        margin-left: 2rem;
        font-size: 1.1rem;
        color: #ccc;
        font-weight: 400;
        white-space: nowrap;
        letter-spacing: 0.02em;
      }
      nav {
        display: flex;
        align-items: center;
        gap: 2rem;
      }
      nav a {
        color: #eee;
        text-decoration: none;
        font-weight: bold;
        font-size: 1.1rem;
        transition: color 0.2s;
      }
      nav a:hover, nav a:focus {
        color: #fff700;
      }
      @media (max-width: 700px) {
        header {
          flex-direction: column;
          gap: 1rem;
          align-items: flex-start;
          padding: 1.5rem 2vw 1rem 2vw;
        }
        .tagline {
          margin-left: 0;
          margin-top: 0.5rem;
        }
        nav {
          gap: 1.2rem;
        }
      }
      .gallery {
        column-count: 2;
        column-gap: 1rem;
        padding: 1rem;
        max-width: 1200px;
        margin: 0 auto;
      }
      .gallery img {
        width: 100%;
        margin-bottom: 1rem;
        border-radius: 8px;
        box-shadow: 0 4px 16px rgba(0,0,0,0.5);
        object-fit: cover;
        display: block;
        break-inside: avoid;
        cursor: pointer;
      }
      footer {
        text-align: center;
        color: #888;
        padding: 2rem 1rem;
      }
    </style>
  </head>
  <body>
    <header>
      <a href="/" class="logo-link" aria-label="Home">
        <img src="/logo.png" alt="The Filthysoap Photography Logo" class="site-logo" />
      </a>
      <span class="tagline"></span>
      <nav>
        <a href="/">Home</a>
        <a href="/portfolio">Portfolio</a>
        <a href="/about">About</a>
        <a href="/contact">Contact</a>
      </nav>
    </header>
    
<Layout title="Contact | The Filthysoap Photography">
  <h2 style="text-align:center; margin-bottom:2rem;">Contact</h2>
  <div class="contact-container">
    <div class="form-wrapper">
      <form method="POST" id="form">
        <input type="hidden" name="access_key" value="4207af3f-f82d-43e8-857d-c7681331a802" />
        <label>
          Name
          <input type="text" name="name" required />
        </label>
        <label>
          Email
          <input type="email" name="email" required />
        </label>
        <label>
          Message
          <textarea name="message" rows="6" required></textarea>
        </label>
        <button type="submit">Send Message</button>
        <div id="result"></div>
      </form>
    </div>
    <div class="map-wrapper">
      <iframe
        src="https://www.openstreetmap.org/export/embed.html?bbox=-80.300,25.700,-80.100,25.900&amp;layer=mapnik&amp;marker=25.7617,-80.1918"
        allowfullscreen=""
        loading="lazy"
        referrerpolicy="no-referrer-when-downgrade"
        title="Miami Map"
      ></iframe>
    </div>
  </div>
  <style>
    .contact-container {
      display: flex;
      gap: 2rem;
      flex-wrap: wrap;
      justify-content: center;
    }
    .form-wrapper, .map-wrapper {
      background: #181818;
      border-radius: 8px;
      box-shadow: 0 4px 16px rgba(0,0,0,0.5);
      padding: 2rem;
      flex: 1 1 400px;
      max-width: 500px;
    }
    form {
      display: flex;
      flex-direction: column;
      gap: 1rem;
    }
    label {
      display: flex;
      flex-direction: column;
      font-weight: 500;
    }
    input, textarea {
      margin-top: 0.25rem;
      padding: 0.75rem;
      border-radius: 4px;
      border: none;
      background: #222;
      color: #eee;
      font-family: inherit;
      font-size: 1rem;
      width: 100%;
      box-sizing: border-box;
    }
    textarea {
      resize: vertical;
      min-height: 120px;
    }
    button {
      margin-top: 0.5rem;
      padding: 0.75rem;
      border: none;
      border-radius: 4px;
      font-weight: bold;
      font-size: 1rem;
      background: #fff;
      color: #111;
      cursor: pointer;
      transition: background 0.2s ease;
    }
    button:hover {
      background: #eee;
    }
    .map-wrapper iframe {
      width: 100%;
      height: 350px;
      border: none;
      border-radius: 8px;
      filter: grayscale(1) contrast(1.2);
      display: block;
    }
    @media (max-width: 900px) {
      .contact-container {
        flex-direction: column;
      }
      .form-wrapper, .map-wrapper {
        max-width: 100%;
      }
    }
  </style>
  <script is:inline>
    const form = document.getElementById('form');
    const result = document.getElementById('result');
    form?.addEventListener('submit', function(e) {
      const formData = new FormData(form);
      e.preventDefault();
      const object = Object.fromEntries(formData);
      const json = JSON.stringify(object);
      result.innerHTML = "Please wait...";
      fetch('https://api.web3forms.com/submit', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          'Accept': 'application/json'
        },
        body: json
      })
      .then(async (response) => {
        let json = await response.json();
        result.innerHTML = json.message;
      })
      .catch(() => {
        result.innerHTML = "Something went wrong!";
      })
      .then(() => {
        form.reset();
        setTimeout(() => {
          result.style.display = "none";
        }, 3000);
      });
    });
  </script>
</Layout>
<footer>
      &copy; 2025 Thefilthysoap. All rights reserved.
</footer>
