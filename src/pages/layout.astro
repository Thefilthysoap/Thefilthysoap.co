---
// src/layouts/Layout.astro
const { title = "The Filthysoap Photography" } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>The Filthysoap Photography</title>
    <meta name="description" content="A showcase of my favorite photographs." />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <style>
      body {
        background: #111;
        color: #eee;
        font-family: 'Helvetica Neue', Arial, sans-serif;
        margin: 0;
        padding: 0;
      }
      header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 2rem 4vw 1rem 4vw;
        background: transparent;
        max-width: 1200px;
        margin: 0 auto;
      }
      .logo-link {
        display: flex;
        align-items: center;
        text-decoration: none;
      }
      .site-logo {
        height: 150px; /* Adjust as needed */
        width: auto;
        display: block;
      }
      .tagline {
        margin-left: 2rem;
        font-size: 1.1rem;
        color: #ccc;
        font-weight: 400;
        white-space: nowrap;
        letter-spacing: 0.02em;
      }
      nav {
        display: flex;
        align-items: center;
        gap: 2rem;
      }
      nav a {
        color: #eee;
        text-decoration: none;
        font-weight: bold;
        font-size: 1.1rem;
        transition: color 0.2s;
      }
      nav a:hover, nav a:focus {
        color: #fff700;
      }
      @media (max-width: 700px) {
        header {
          flex-direction: column;
          gap: 1rem;
          align-items: flex-start;
          padding: 1.5rem 2vw 1rem 2vw;
        }
        .tagline {
          margin-left: 0;
          margin-top: 0.5rem;
        }
        nav {
          gap: 1.2rem;
        }
      }
      .gallery {
        column-count: 2;
        column-gap: 1rem;
        padding: 1rem;
        max-width: 1200px;
        margin: 0 auto;
      }
      .gallery img {
        width: 100%;
        margin-bottom: 1rem;
        border-radius: 8px;
        box-shadow: 0 4px 16px rgba(0,0,0,0.5);
        object-fit: cover;
        display: block;
        break-inside: avoid;
        cursor: pointer;
      }
      footer {
        text-align: center;
        color: #888;
        padding: 2rem 1rem;
      }
    </style>
  </head>
  <body>
    <header>
      <a href="/" class="logo-link" aria-label="Home">
        <img src="/logo.png" alt="The Filthysoap Photography Logo" class="site-logo" />
      </a>
      <span class="tagline">Capturing moments, one photo at a time.</span>

      <nav>
        <a href="/">Home</a>
        <a href="/portfolio">Portfolio</a>
        <a href="/about">About</a>
        <a href="/contact">Contact</a>
      </nav>
    </header>
    <main>
      <slot />
    </main>
    <footer>
      &copy; 2025 Thefilthysoap. All rights reserved.
    </footer>
  </body>
</html>
